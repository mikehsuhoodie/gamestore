{
    "description": "2-player Snake Duel (server-authoritative). Tkinter GUI client. Reports results to Lobby on game over.",
    "structure": {
        "server_script": "game_server.py",
        "client_script": "game_client.py"
    },
    "metadata": {
        "name": "Snake Duel",
        "version": "2.0.0",
        "type": "GUI",
        "min_players": 2,
        "max_players": 2
    },
    "launch_arguments": {
        "server": [
            "python3",
            "game_server.py",
            "--port",
            "<port>",
            "--room_id",
            "<room_id>"
        ],
        "client": [
            "python3",
            "game_client.py",
            "--ip",
            "<ip>",
            "--port",
            "<port>"
        ]
    }
}